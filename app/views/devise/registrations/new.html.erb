<div class="container">
  <h2>ユーザー登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :"氏名" %><br />
      <%= f.text_field :name, placeholder: '氏名を入力（必須）' %>
    </div>

    <div class="field">
      <%= f.label :"ニックネーム" %><br />
      <%= f.text_field :nickname, placeholder: 'ニックネームを入力（必須）' %>
      <p>※レビューやコメントなどには氏名ではなくニックネームが表示されます。</p>
    </div>

    <div class="field">
      <%= f.label :"メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true , placeholder: 'メールアドレスを入力（必須）'%>
    </div>

    <div class="field">
      <%= f.label :"生年月日(必須)" %><br />
      <%= f.date_field :birth_day %>
    </div>

    <div class="field">
      <%= f.label :"性別(必須)" %><br />
        <%= f.radio_button :sex, "男" %> <%= f.label :sex_1, "男性" %>
        <%= f.radio_button :sex, "女" %> <%= f.label :sex_2, "女性" %>
    </div>


    <div class="field">
      <%= f.label :"職業(必須)" %><br />
        <%= f.radio_button :profession, "開業医" %> <%= f.label :profession_1, "開業医" %>
        <%= f.radio_button :profession, "勤務医" %> <%= f.label :profession_1, "勤務医" %>
        <%= f.radio_button :profession, "歯科衛生士" %> <%= f.label :profession_1, "歯科衛生士" %>
        <%= f.radio_button :profession, "歯科技工士" %> <%= f.label :profession_1, "歯科技工士" %>
        <%= f.radio_button :profession, "歯科助手" %> <%= f.label :profession_1, "歯科助手" %>
   </div>

    <div class="field">
      <%= f.label :"勤務医院(必須)" %><br />
      <%= f.text_field :office_name %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :"password 確認" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
