<div class="container">
  <div class="row ">
    <div class="col-xs-10 col-lg-6">
    <h3><%= @product.product_name %>のレビューを投稿</h3>

    <%= form_for (@review) do |f| %>

          <%= f.label :ニックネーム%>
          <div class="panel panel-default">
            <div class="panel-body">
              <%= current_user.nickname %>
              <small class="pull-right">
              <%= link_to 'ニックネームの変更はこちら', "/users/#{current_user.id}/edit", method: :get %>
            </small>
            </div>
          </div>

        <div class="form-group">
            <%= f.label :満足度%>
            <%= f.number_field :rate, placeholder: '評価', value: 1, max: 10, min: 1, html: { class: "search__query", style: 'text-align: right;'} , :class=>"form-control"%>
        </div>

        <div class="form-group">
            <%= f.label :製品使用年数, style: { 'margin-right' => 8 } %>
            <%= f.number_field :use_period, placeholder: '使用年数', value: 1, max: 20, min: 1, html: { class: "search__query", style: 'text-align: right;' } , :class=>"form-control"%>
        </div>

      <div class="form-group">
        <%= f.label :レビュー, style: { 'margin-right' => 8 } %>
        <%= f.text_area :review, placeholder: '製品の使用感，性能，メンテナンス性，耐久性，デザイン，価格などについて記載してください。', style: 'width: 100%;height: 200px;' , :class=>"form-control"%>
      </div>
      <%= button_tag type: "submit", class: "btn secondary" do %>投稿する<i class="icon-arrow-right"></i><% end %>
    </div>

    <% end %>
    </div>
  </div>
</div>