<div class="container">
  <div class="row ">
    <div class="col-xs-10 col-lg-6">
    <h3><%= @product.product_name%>への質問を投稿</h3>

    <%= form_for [@product, @question] do |f| %>

      <%= f.label :ニックネーム%>
      <div class="panel panel-default">
        <div class="panel-body">
          <%= current_user.nickname %>
          <small class="pull-right">
          <%= link_to 'ニックネームの変更はこちら', "/users/#{current_user.id}/edit", method: :get %>
        </small>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :質問内容, style: { 'margin-right' => 8 } %>
        <%= f.text_area :text, placeholder: '質問内容を記載してください。', style: 'width: 100%;height: 200px;' , :class=>"form-control"%>
      </div>
      <%= button_tag type: "submit", class: "btn secondary" do %>質問を投稿する<i class="icon-arrow-right"></i><% end %>
    </div>

    <% end %>
    </div>
  </div>
</div>